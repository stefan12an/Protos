<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.protos">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/protos_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/protos_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Protos">
        <activity android:name=".ProfilePic"></activity>
        <activity
            android:name=".Profile"
            android:label="@string/user" />
        <activity android:name=".AccountSetup" />
        <activity android:name=".LoginActivity"
            android:theme="@style/Theme.Protos.NoActionBar"/>
        <activity android:name=".SignupActivity"
            android:theme="@style/Theme.Protos.NoActionBar"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>